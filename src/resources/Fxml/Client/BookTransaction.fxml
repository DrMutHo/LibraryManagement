<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="750.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.Controllers.Client.BookTransactionController">
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="58.0" prefWidth="900.0" spacing="10.0">
         <children>
            <Label alignment="CENTER" prefHeight="58.0" prefWidth="129.0" text="My Library" textFill="#4a34f7">
               <font>
                  <Font name="Monotype Corsiva" size="22.0" />
               </font>
            </Label>
            <Separator maxHeight="-Infinity" orientation="VERTICAL" prefHeight="21.0" prefWidth="0.0" />
            <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label fx:id="timeLabel" alignment="CENTER" prefHeight="28.0" prefWidth="227.0">
                     <font>
                        <Font name="Book Antiqua" size="18.0" />
                     </font>
                  </Label>
                  <ImageView fitHeight="44.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../Images/profile-user.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
         </children>
      </HBox>
   </top>
   <center>
    <VBox alignment="TOP_CENTER" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="310.0" prefWidth="850.0" spacing="10">
    <TableView fx:id="transactionTable" prefHeight="310.0" prefWidth="850.0">
        <columns>
            <TableColumn fx:id="transactionIdColumn" prefWidth="130.0" text="Transaction ID" />
            <TableColumn fx:id="clientIdColumn" prefWidth="220.0" text="Title" />
            <TableColumn fx:id="copyIdColumn" prefWidth="90.0" text="Copy ID" />
            <TableColumn fx:id="borrowDateColumn" prefWidth="160.0" text="Borrow Date" />
            <TableColumn fx:id="returnDateColumn" prefWidth="160.0" text="Return Date" />
            <TableColumn fx:id="statusColumn" prefWidth="90.0" text="Status" />
        </columns>
    </TableView>
</VBox>
   </center>
   <bottom>
      <HBox prefHeight="385.0" prefWidth="850.0" BorderPane.alignment="CENTER" />
   </bottom>
   </BorderPane>
