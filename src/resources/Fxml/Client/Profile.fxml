<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" prefHeight="750.0" prefWidth="850.0" stylesheets="@../../Styles/Client/Profile.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.Controllers.Client.ProfileController">
   <left>
      <VBox alignment="TOP_CENTER" prefHeight="692.0" prefWidth="264.0" styleClass="left" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" spacing="10.0" styleClass="vbox-top">
               <children>
                  <ImageView fx:id="profileImageView" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
                  <Label fx:id="labelFullName" styleClass="name-label" />
                  <Button mnemonicParsing="false" prefHeight="33.0" prefWidth="105.0" text="Profile" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
               <children>
                  <Label fx:id="editProfile" alignment="CENTER" prefHeight="30.0" prefWidth="273.0" text="Edit Profile">
                     <graphic>
                        <ImageView fitHeight="32.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../Images/profile-user.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Label>
                  <Label fx:id="changePassword" alignment="CENTER" prefHeight="30.0" prefWidth="265.0" text="Change Password">
                     <graphic>
                        <ImageView fitHeight="32.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../Images/key.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Label>
                  <Label alignment="CENTER" prefHeight="30.0" prefWidth="269.0" text="Change Profile Image">
                     <graphic>
                        <ImageView fitHeight="32.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../Images/default.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Label>
                  <Label fx:id="deleteAccount" alignment="CENTER" prefHeight="30.0" prefWidth="271.0" text="Delete Account">
                     <graphic>
                        <ImageView fitHeight="32.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../Images/bin.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Label>
               </children>
            </VBox>
         </children>
      </VBox>
   </left>
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="692.0" prefWidth="576.0" styleClass="center" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="42.0" prefWidth="586.0">
               <children>
                  <Label fx:id="headLabel" prefHeight="42.0" prefWidth="107.0" />
               </children>
            </HBox>
            <ScrollPane fx:id="scrollPane" prefHeight="390.0" prefWidth="591.0" />
         </children></VBox>
   </center>
</BorderPane>
