<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="750.0" prefWidth="850.0" stylesheets="@../../Styles/Client/Profile.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.Controllers.Client.ProfileController">
   <top>
      <HBox alignment="CENTER" prefHeight="58.0" prefWidth="850.0" styleClass="hbox-header" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="header-title" text="🙍🏻‍♂️ Profile" />
         </children>
      </HBox>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="682.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Setting Your Account" />
            <Button mnemonicParsing="false" text="Edit Profile" />
            <Button fx:id="changePasswordButton" mnemonicParsing="false" onAction="#changePassword" text="Change Password" />
            <Button fx:id="changeEmailButton" mnemonicParsing="false" text="Change Email" />
            <Button fx:id="deleteAccountButton" mnemonicParsing="false" text="Delete Account" />
            <Button mnemonicParsing="false" onMouseClicked="#changeProfileImageView" text="Change Profile Image" />
         </children>
      </VBox>
   </center>
   <left>
      <StackPane fx:id="stackPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="523.0" prefWidth="622.0">
         <children>

            <AnchorPane fx:id="changePasswordPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="523.0" prefWidth="626.0" visible="false" />

            <VBox fx:id="vBox" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="522.0" prefWidth="637.0">
               <children>
                  <Label text="Your Profile" />
                  <ImageView fx:id="profileImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                  <Label text="Library Card Number:" />
                  <Label fx:id="labelLibraryCardNumber" />
                  <Label text="Full Name:" />
                  <Label fx:id="labelFullName" />
                  <Label text="Username:" />
                  <Label fx:id="labelUsername" />
                  <Label text="Email:" />
                  <Label fx:id="labelEmail" />
                  <Label prefHeight="18.0" prefWidth="88.0" text="Phone Number:" />
                  <Label fx:id="labelPhoneNumber" />
                  <Label text="Address:" />
                  <Label fx:id="labelAddress" />
                  <Label text="Outstanding Fees:" />
                  <Label fx:id="labelFee" />
                  <Label prefHeight="18.0" prefWidth="101.0" text="Registration Date:" />
                  <Label fx:id="labelRegistrationDate" />
               </children>
            </VBox>

         </children>
      </StackPane>
   </left>
</BorderPane>
