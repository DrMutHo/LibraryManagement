<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" prefHeight="750.0" prefWidth="850.0" stylesheets="@../../Styles/Client/Profile.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.Controllers.Client.ProfileController">
   <top>
      <HBox alignment="CENTER" prefHeight="58.0" prefWidth="850.0" spacing="10.0" styleClass="hbox-header" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="header-title" text="🙍🏻‍♂️ Personal Profile" />
         </children>
      </HBox>
   </top>
   <left>
      <VBox alignment="TOP_CENTER" prefHeight="692.0" prefWidth="233.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="TOP_CENTER">
               <children>
                  <Label fx:id="labelFullName" />
                  <ImageView fx:id="profileImageView" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </VBox>
            <Label text="Contact Information" />
            <Label fx:id="labelPhoneNumber" />
            <Label fx:id="labelEmail" />
            <Label fx:id="labelAddress" />
            <VBox alignment="BOTTOM_CENTER" prefHeight="458.0" prefWidth="233.0">
               <children>
                  <Label text="Account Information" />
                  <Label fx:id="labelUsername" />
                  <Label fx:id="labelLibraryCardNumber" />
                  <Label fx:id="labelFee" />
                  <Label fx:id="labelRegistrationDate" />
               </children>
            </VBox>
         </children>
      </VBox>
   </left>
   <center>
      <VBox fx:id="vBox" prefHeight="692.0" prefWidth="454.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="WishList" />
            <ScrollPane prefHeight="297.0" prefWidth="440.0">
               <content>
                  <GridPane fx:id="wishList">
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                  </GridPane>
               </content>
            </ScrollPane>
         </children></VBox>
   </center>
   <right>
      <VBox prefHeight="692.0" prefWidth="158.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" text="Edit Profile" />
            <Button fx:id="changePasswordButton" mnemonicParsing="false" onAction="#changePassword" text="Change Password" />
            <Button fx:id="changeEmailButton" mnemonicParsing="false" text="Change Email" />
            <Button fx:id="deleteAccountButton" mnemonicParsing="false" text="Delete Account" />
            <Button mnemonicParsing="false" onMouseClicked="#changeProfileImageView" text="Change Profile Image" />
         </children></VBox>
   </right>
</BorderPane>
