<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="750.0" prefWidth="850.0" stylesheets="@../../Styles/Client/Dashboard.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.Controllers.Client.DashboardController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="58.0" prefWidth="700.0" spacing="10.0">
            <Label alignment="CENTER" prefHeight="58.0" prefWidth="129.0" text="My Library" textFill="#4a34f7">
                <font>
                    <Font name="Monotype Corsiva" size="22.0" />
                </font>
            </Label>
            <Separator maxHeight="-Infinity" orientation="VERTICAL" prefHeight="21.0" prefWidth="0.0" />
            <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" />
        </HBox>
    </top>
    
    <center>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" styleClass="center-container" BorderPane.alignment="CENTER">
            <children>
                <HBox prefHeight="121.0" prefWidth="850.0" spacing="20" styleClass="statistic-container" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                    <children>
                        <VBox prefHeight="200.0" prefWidth="100.0" styleClass="statistic-box">
                            <children>
                                <ImageView fitHeight="42.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true" />
                                <Label fx:id="borrowedBooks" styleClass="statistic-value" text="25" />
                                <Label styleClass="statistic-label" text="Borrowed Books" />
                            </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0" styleClass="statistic-box">
                            <children>
                                <ImageView fitHeight="42.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true" />
                                <Label fx:id="favBook" styleClass="statistic-value" text="Chin Chin" />
                                <Label styleClass="statistic-label" text="Favourite Book" />
                            </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0" styleClass="statistic-box">
                            <children>
                                <ImageView fitHeight="42.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true" />
                                <Label styleClass="statistic-value" text="Sci-Fi" />
                                <Label fx:id="favGenre" styleClass="statistic-label" text="Favourite Genre" />
                            </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0" styleClass="statistic-box">
                            <children>
                                <ImageView fitHeight="42.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true" />
                                <Label fx:id="fee" styleClass="statistic-value" text="25$" />
                                <Label styleClass="statistic-label" text="Outstanding Fee" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox layoutY="150.0" prefHeight="175.0" prefWidth="850.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" spacing="20">
                    <children>
                        <Label prefHeight="18.0" prefWidth="200.0" text="Top 5 Favourite Books" styleClass="top-books-label" />
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
