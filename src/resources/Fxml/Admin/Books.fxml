<BorderPane prefHeight="750.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.Controllers.Admin.BooksController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="58.0" prefWidth="900.0" spacing="10.0">
            <Label alignment="CENTER" prefHeight="58.0" prefWidth="129.0" text="My Library" textFill="#4a34f7">
                <font>
                    <Font name="Monotype Corsiva" size="22.0" />
                </font>
            </Label>
            <Separator maxHeight="-Infinity" orientation="VERTICAL" prefHeight="21.0" prefWidth="0.0" />
            <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                <Label alignment="CENTER" prefHeight="36.0" prefWidth="98.0" text="Hello, user">
                    <font>
                        <Font name="Book Antiqua" size="18.0" />
                    </font>
                </Label>
            <ImageView fitHeight="44.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../Images/profile-user.png" />
               </image>
            </ImageView>
            </HBox>
        </HBox>
    </top>
   <right>
      <AnchorPane prefHeight="560.0" prefWidth="710.0" BorderPane.alignment="CENTER">
         <children>
            <ToolBar layoutY="652.0" prefHeight="40.0" prefWidth="709.0">
              <items>
                <Button fx:id="sillylilbutton" mnemonicParsing="false" text="Add Book" />
                  <TextField fx:id="searchfield" prefHeight="25.0" prefWidth="276.0" />
              </items>
            </ToolBar>
            <TableView fx:id="tableview" prefHeight="656.0" prefWidth="712.0">
              <columns>
                <TableColumn fx:id="book_id" prefWidth="58.5" text="book_id" />
                <TableColumn fx:id="title" prefWidth="62.0" text="title" />
                  <TableColumn fx:id="author" prefWidth="56.5" text="author" />
                  <TableColumn fx:id="isbn" prefWidth="58.5" text="isbn" />
                  <TableColumn fx:id="genre" prefWidth="55.0" text="genre" />
                  <TableColumn fx:id="language" prefWidth="61.0" text="language" />
                  <TableColumn fx:id="description" prefWidth="164.5" text="description" />
                  <TableColumn fx:id="publication_year" prefWidth="112.5" text="publication_year" />
                  <TableColumn fx:id="image_url" prefWidth="82.5" text="image_url" />
              </columns>
            </TableView>
         </children>
      </AnchorPane>
   </right>

</BorderPane>
